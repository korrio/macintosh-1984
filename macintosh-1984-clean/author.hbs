{{!< default}}

<div class="article-list">
    <div class="author-header">
        <h1 class="author-title">
            <span class="mac-icon"></span>
            Posts by {{name}}
        </h1>
        {{#if bio}}
            <p class="author-description">{{bio}}</p>
        {{/if}}
        {{#if website}}
            <p class="author-website">
                <a href="{{website}}" target="_blank" rel="noopener">Visit website →</a>
            </p>
        {{/if}}
    </div>

    {{#foreach posts}}
        <article class="article-item {{post_class}}">
            <h2 class="article-title">
                <a href="{{url}}">{{title}}</a>
            </h2>
            <div class="article-meta">
                {{date format="MMMM D, YYYY"}}
                {{#if reading_time}}
                    • {{reading_time}} min read
                {{/if}}
            </div>
            {{#if excerpt}}
                <div class="article-excerpt">
                    {{excerpt}}
                </div>
            {{else}}
                <div class="article-excerpt">
                    {{content words="50"}}
                </div>
            {{/if}}
            {{#if primary_tag}}
                <div class="article-tags">
                    <span class="tag">{{primary_tag.name}}</span>
                </div>
            {{/if}}
            <a href="{{url}}" class="read-more">Continue reading →</a>
        </article>
    {{/foreach}}

    {{!-- Pagination --}}
    {{pagination}}
</div>