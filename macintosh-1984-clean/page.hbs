{{!< default}}

<div class="article-content">
    <div class="back-to-blog">
        <a href="{{@site.url}}">‚Üê Back to home</a>
    </div>
    
    <article class="article-header {{post_class}}">
        {{#unless @page.show_title_and_feature_image}}
            {{#if feature_image}}
                <div class="article-image">
                    <img src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                    {{#if feature_image_caption}}
                        <div class="article-image-caption">{{feature_image_caption}}</div>
                    {{/if}}
                </div>
            {{/if}}
            <h1 class="article-title">{{title}}</h1>
        {{/unless}}
        
        <div class="article-meta">
            {{#if updated_at}}
                <strong>Last updated:</strong> {{date updated_at format="MMMM D, YYYY"}}
            {{else}}
                <strong>Published:</strong> {{date format="MMMM D, YYYY"}}
            {{/if}}
        </div>
    </article>
    
    <div class="article-body">
        {{content}}
    </div>
</div>